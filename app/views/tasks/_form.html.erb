<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-check">
    <input class="form-check-input" type="checkbox" name="task[completed]" id="completed">
    <%= f.label 'Mark as completed?' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
